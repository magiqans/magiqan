{
  "name": "@magiqan/monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node -e 'console.log(`Hello`)'",
    "example": "node --no-warnings --experimental-abortcontroller -r ts-node/register examples/src/index.ts",
    "lint": "eslint packages/**/*.ts",
    "build": "npm run build:constants & npm run build:types & npm run build:core & npm run build:events & npm run build:errors & npm run build:reporter & npm run build:runner & npm run build:cli",
    "build:cli": "npm run build --prefix packages/cli",
    "build:constants": "npm run build --prefix packages/constants",
    "build:core": "npm run build --prefix packages/core",
    "build:errors": "npm run build --prefix packages/errors",
    "build:events": "npm run build --prefix packages/events",
    "build:reporter": "npm run build --prefix packages/reporter",
    "build:runner": "npm run build --prefix packages/runner",
    "build:types": "npm run build --prefix packages/types",
    "prepare": "husky install"
  },
  "engines": {
    "node": "^14.15.0 || >=15.0.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@types/node": "16.9.6",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "commitlint": "13.2.1",
    "eslint": "8.0.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.1",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.0",
    "ts-node": "10.2.1",
    "tslib": "2.3.1",
    "typescript": "4.3.4"
  }
}
